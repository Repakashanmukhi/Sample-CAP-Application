<core:FragmentDefinition xmlns:core="sap.ui.core" xmlns="sap.m">
    <Dialog
        id="createAuthorDialog"
        title="Create Author"
        xmlns:xml="http://www.w3.org/XML/1998/namespace">
        <VBox>
            <Label text="Author ID"/>
            <Input id="a_id"  required="true"/>
            
            <Label text="Title"/>
            <Input id="a_title" required="true"/>

            <Label text="Author Name"/>
            <Input id="a_name" required="true"/>

            <Label text="Stock"/>
            <Input id="a_stock" required="true"/>

            <Label text="Price"/>
            <Input id="a_price" required="true"/>
            
            <HBox>
                <Button
                    text="Create"
                    press="onCreateAuthor"
                    type="Emphasized"/>
                <Button
                    text="Cancel"
                    press="onCancel"/>
            </HBox>
        </VBox>
    </Dialog>
</core:FragmentDefinition>
